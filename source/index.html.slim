section.brief
  h1 GORUCO is a 1-day technical conference aimed at highly motivated programmers.
  h3 Get Speaker and Ticket Updates:
  form.signup-form action="//goruco.us2.list-manage.com/subscribe/post?u=00945f50a161df14372a84a34&amp;id=cdf39163af" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate="novalidate"
    input.signup.required.email type="email" value="" name="EMAIL" id="mce-EMAIL" placeholder="email address"
    input.signup type="submit" value="Update Me" name="subscribe" id="mc-embedded-subscribe"
    div style="position: absolute; left: -5000px;"
      input type="text" name="b_00945f50a161df14372a84a34_cdf39163af" tabindex="-1" value=""

section.news
  h1 News
  - top_article = blog('news').articles.first
  h3 = top_article.data.title
  p  = top_article.body

section.past-speakers
  h1 Past Talks
  .talks-sidebar
    - speaker_years = blog('speakers').articles.group_by { |article| article.data.year }
    ul
      - speaker_years[2014].each do |article|
        li
          h5
            a href=article.url
              = article.data.meta
          p= article.data.title
  .talks-panel
    - speaker_years = blog('speakers').articles.group_by { |article| article.data.year }
    - article = speaker_years[2014].first
    - if article.data.youtube_video_id.present?
      div.iframe-video-wrapper
        iframe width="560" height="315" src="//www.youtube.com/embed/#{article.data.youtube_video_id}" frameborder="0" allowfullscreen
    - if article.data.vimeo_video_id.present?
      div.iframe-video-wrapper.vimeo
        iframe src="//player.vimeo.com/video/#{article.data.vimeo_video_id}?title=0&amp;byline=0&amp;portrait=0" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen
    p = article.body

section.organizers id='organizers'
  h1 Organizers
  ul
  - blog('organizers').articles.each do |article|
    li.block
      - if article.data.image.present?
        img src=article.data.image alt=article.data.title onerror="this.style.display='none'" height=100 width=100
      h5= "#{article.data.title}"
      - if article.data.twitter.present?
        a href="http://twitter.com/#{article.data.twitter}"
          = "@#{article.data.twitter}"
        br
      - if article.data.link.present?
        a href="http://#{article.data.link}"
          = "#{article.data.link}"

